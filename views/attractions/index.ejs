<% layout('layouts/boilerplate')%>

    <h1>All Attractions</h1>

    <% for (let attraction of attractions) { %>

        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-7">
                    <img class="img-fluid" alt="" src="<%= attraction.images[0].url%>">
                </div>
                <div class="col-md-5">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= attraction.name%>
                        </h5>
                        <p class="card-text"><small class="text-body-secondary">
                                <%= attraction.location%>
                            </small></p>
                        <a class="btn btn-primary" href="/attractions/<%= attraction._id%>">View <%= attraction.name%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <% }%>