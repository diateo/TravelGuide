<% layout('layouts/boilerplate')%>

    <div id="map" style="width:100%;height: 500px"></div>
    <h1>All Attractions</h1>

    <% for (let attraction of attractions) { %>

        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-7">
                    <%if(attraction.images.length){ %>
                        <img class="img-fluid" alt="" src="<%= attraction.images[0].url%>">
                        <%}else{%>
                            <img class="img-fluid" alt=""
                                src=" https://res.cloudinary.com/dylm9rjsl/image/upload/v1682597960/TravelGuide/dtymw6jkwcjxpwh2fzbv.jpg">
                            <%}%>
                </div>
                <div class="col-md-5">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= attraction.name%>
                        </h5>
                        <p class="card-text"><small class="text-body-secondary">
                                <%= attraction.location%>
                            </small></p>
                        <a class="btn btn-primary" href="/attractions/<%= attraction._id%>">View <%= attraction.name%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <% }%>

            <script>
                const token = '<%- process.env.MAPBOX_TOKEN%>';
            </script>
            <script src="/scripts/clusterMap.js"></script>