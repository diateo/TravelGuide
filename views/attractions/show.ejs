<% layout('layouts/boilerplate')%>


    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%=attraction.image%>" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=attraction.name%>
                    </h5>
                    <p class="card-text">
                        <%=attraction.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=attraction.location%>
                    </li>
                    <li class="list-group-item">Entrance fee: <%=attraction.fee%> lei
                    </li>
                    <li class="list-group-item">
                        Created by: <%=attraction.owner.username%>
                    </li>
                </ul>
                <% if(currentUser && attraction.owner.equals(currentUser._id)) {%>
                    <div class="card-body">
                        <a href="/attractions/<%=attraction._id%>/edit" class="card-link btn btn-primary">Edit</a>
                        <form class="d-inline" action="/attractions/<%=attraction._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <%}%>
            </div>
        </div>
        <div class="col-6">
            <% if(currentUser){ %>
                <h2>Please share your opinion :)</h2>
                <form action="/attractions/<%= attraction._id%>/reviews" method="POST" class="mb-3 requires-validation"
                    novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="text">Review</label>
                        <textarea class="form-control" name="review[text]" id="text" rows="10" required></textarea>
                        <div class="valid-feedback">
                            Nice!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input type="range" class="form-range" name="review[rating]" id="rating" min="1" max="5">
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
                <%}%>
                    <% for(let review of attraction.reviews){%>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Rating: <%= review.rating%>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">By <%=review.author.username%>
                                </h6>
                                <p class="card-text">
                                    Review: <%= review.text%>
                                </p>
                                <form action="/attractions/<%=attraction._id%>/reviews/<%=review._id%>?_method=DELETE"
                                    method="POST">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                        <%}%>
        </div>
    </div>